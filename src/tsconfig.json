{
  "compilerOptions": {
    "target": "es2016",                                  
    "module": "commonjs",                                
    "rootDir": "./",                                   
    "outDir": "../bin",
    "removeComments": true,                              
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,            
    "strict": true,
    "alwaysStrict": true,                             
    "noUnusedLocals": true,                           
    "skipLibCheck": true                                 
  },
  "typedocOptions": {
    "out": "docs",
    "entryPoints": ["./src/ludit/Tokenizer/index.ts"]
  }
}
